<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/pvr_number"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/epg_text_color"
        style="@style/Medium"/>

    <TextView
        android:id="@+id/pvr_mode"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/epg_text_color"
        style="@style/Medium"/>

    <TextView
        android:id="@+id/pvr_service_name"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center"
    	android:singleLine="true"
        android:textColor="@drawable/epg_text_color"
        style="@style/Medium"/>

    <TextView
        android:id="@+id/pvr_set_date"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/epg_text_color"
        style="@style/Medium"/>
    
    <TextView
        android:id="@+id/pvr_weekdate"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/epg_text_color"
        style="@style/Medium"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pvr_start_time"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/epg_text_color"
        style="@style/Medium"/>

    <TextView
        android:id="@+id/pvr_time_length"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@drawable/epg_text_color"
        style="@style/Medium"/>

</LinearLayout>